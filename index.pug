mixin product(title,image,description,price,rrp)
    .product-tile(data-aos='fade-up')
        .product-image(style='background-image: url("images/product_shots/'+image+'");')
        .product-content
            .title=title
            .description=description
            .price-row
                //if(rrp>price)
                //    .red-strikethrough
                //        .price $#{rrp}
                //.price $#{price}


mixin productCategory(name)
    .product-category
        img.divider-side(src='images/dividerleft.png', alt='')
        .product-category-title=name
        img.divider-side(src='images/dividerright.png', alt='')

