mixin product(title,image,description,price,rrp)
    .product-tile(data-aos='fade-up')
        .product-image(style='background-image: url("images/product_shots/'+image+'");')
        .product-content
            .title=title
            .description=description
            .price $#{price}


mixin productCategory(name)
    .product-category(data-aos='fade-down')
        img(src='images/dividerleft.png')
        .product-category-title=name
        img(src='images/dividerright.png')

html
    head
        title Rebellion Rum Co - Gin, Vodka & Rum Distillery - Yatala
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@400;600&family=Neuton:wght@300;700;800&display=swap")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(rel="stylesheet", href="css/styles.css")
        link(rel="stylesheet", href="https://unpkg.com/aos@2.3.1/dist/aos.css")
